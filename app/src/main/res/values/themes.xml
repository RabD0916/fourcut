<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Coco" parent="Theme.AppCompat.Light">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Coco" parent="Base.Theme.Coco" />
    <style name="Base.Theme.coco.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/graph</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Coco</item>
    </style>
</resources>